<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans    
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context  
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="com.test.java.spring.beaninit" />
	<bean id="person" class="com.test.java.spring.beaninit.Person">
		<property name="name" value="xx"></property>
	</bean>
	<bean id="testBean" class="com.test.java.spring.beaninit.TestBean"></bean>
	<bean id="testBeanFactoryProcessor" class="com.test.java.spring.beaninit.TestBeanFactoryProcessor"></bean>

	<bean id="testFactoryBean" class="com.test.java.spring.beaninit.TestFactoryBean"></bean>

</beans>